<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data -->
        <exclude domain="database" />
        <exclude domain="sharedpref" path="secret_prefs.xml" />
        <exclude domain="file" path="private/" />
    </cloud-backup>
    <device-transfer>
        <!-- Transfer app data on device transfer -->
        <include domain="database" />
        <include domain="sharedpref" />
        <exclude domain="sharedpref" path="secret_prefs.xml" />
    </device-transfer>
</data-extraction-rules>